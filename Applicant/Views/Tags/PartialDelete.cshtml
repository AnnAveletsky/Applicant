@model Applicant.Models.TagCreate

<div class="modal-dialog" role="document">
    <div class="modal-content">
        @using (Ajax.BeginForm("Delete", "Tags",Model, new AjaxOptions { UpdateTargetId = "tags" }))
        {
            @Html.AntiForgeryToken()
            <div class="modal-body pager">
                <h3>Вы уверены что ходите удалить тег @Html.DisplayFor(modelItem => Model.TagName)?</h3>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" aria-hidden="true" aria-label="Close">Отмена</button>
                <input type="submit" class="btn btn-danger" value="Удалить" style="opacity:0.6;" data-toggle="modal" data-target="#myModal"/>
            </div>
        }
    </div>
</div>