@model Applicant.Models.TagCreate
@using (Ajax.BeginForm("Create", "Tags", new AjaxOptions{ UpdateTargetId = "tags"}))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.HiddenFor(model=>Model.ApplicantId)
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-3">
                @Html.EditorFor(model => model.TagName, new { htmlAttributes = new { id = "myForm", @class = "form-control short" } })
                @Html.ValidationMessageFor(model => model.TagName, "", new { @class = "text-danger" })
            </div>
            <div class=" col-md-3">
                <input type=reset value=очистить formtarget="myForm">
                <button type="submit" value="Create" class="btn btn-default btn-md" onclick="">
                    <i class="glyphicon glyphicon-plus"></i>
                    Добавить
                </button>
            </div>
        </div>

    </div>
}