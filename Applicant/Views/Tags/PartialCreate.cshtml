@model Applicant.Models.Tag
@using (Ajax.BeginForm("Create", "Tags", new { id = ViewBag.ApplicantID }, new AjaxOptions
{
    UpdateTargetId = "tags"
}))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-3">
                @Html.EditorFor(model => model.TagName, new { htmlAttributes = new { @class = "form-control short"} })
                @Html.ValidationMessageFor(model => model.TagName, "", new { @class = "text-danger" })
            </div>
            <div class=" col-md-3">
                <button type="submit" value="Create" class="btn btn-default btn-md">
                    <i class="glyphicon glyphicon-plus"></i>
                    Добавить
                </button>
            </div>
        </div>

    </div>
}