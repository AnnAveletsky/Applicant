@model IEnumerable<Applicant.Models.History>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CommunicationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TypeCommunication)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HistoryComments)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CommunicationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeCommunication)
            </td>
            <td>
                @if (item.HistoryComments != null && item.HistoryComments.Length > 50)
                {
                    @Html.DisplayFor(modelItem => item.HistoryComments).ToString().Substring(0, 20);
                    <div>...</div>

                }
                else
                {
                    @Html.DisplayFor(modelItem => item.HistoryComments);
                }
            </td>
            <td>
                @using (Ajax.BeginForm("Delete", "Histories", new { id = item.HistoryId, applicantId = item.ApplicantId },
                    new AjaxOptions { HttpMethod = "Get", UpdateTargetId = "myModal" }))
                {
                    <div class="btn-toolbar">
                        <button class="btn btn-primary btn-sm" href="@Url.Action("Edit", "Histories", new { id = item.HistoryId, applicantId = item.ApplicantId })">
                            <i class="glyphicon glyphicon-edit"></i>
                            Править
                        </button>
                        <button class="btn btn-info btn-sm" href="@Url.Action("Details", "Histories", new { id = item.HistoryId, applicantId = item.ApplicantId }) ">
                            <i class=" glyphicon glyphicon-list-alt">
                            </i>
                            Подробнее
                        </button>
                        <button class="btn btn-danger btn-sm" type="submit" value="Удалить" data-toggle="modal" data-target="#myModal" href="@Url.Action("Delete", "Histories", new { id = item.HistoryId, applicantId = item.ApplicantId })">
                            <i class="glyphicon glyphicon-remove-circle"></i>
                            Удалить
                        </button>
                    </div>
                }
            </td>
        </tr>
    }
</table>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">

</div>