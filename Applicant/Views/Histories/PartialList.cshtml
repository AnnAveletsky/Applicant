@model IEnumerable<Applicant.Models.History>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CommunicationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TypeCommunication)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HistoryComments)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CommunicationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeCommunication)
            </td>
            <td>
                @if (item.HistoryComments != null && item.HistoryComments.Length > 50)
                {
                    @Html.DisplayFor(modelItem => item.HistoryComments).ToString().Substring(0, 20);
                    <div>...</div>

                }
                else
                {
                    @Html.DisplayFor(modelItem => item.HistoryComments);
                }
            </td>
            <td>
                <div class="btn-toolbar">
                    <a class="btn btn-primary btn-sm" href="@Url.Action("Edit", "Histories", new { id = item.HistoryId })">
                        <i class="glyphicon glyphicon-edit"></i>
                        Править
                    </a>
                    <a class="btn btn-info btn-sm" href="@Url.Action("Details", "Histories", new { id = item.HistoryId }) ">
                        <i class=" glyphicon glyphicon-list-alt">
                        </i>
                        Подробнее
                    </a>
                    <button class="btn btn-danger btn-sm" onclick="delHis(@item.HistoryId)" type="submit" value="Удалить" data-toggle="modal" data-target="#myModal">
                        <i class="glyphicon glyphicon-remove-circle"></i>
                        Удалить
                    </button>
                </div>

            </td>
        </tr>
    }
</table>
<script>
    function delHis(id) {
        $.ajax({
            url: "@Url.Action("Delete", "Histories")",
            data: "id=" + id,
            success: function (html) {
                $("#myModal").empty();
                $("#myModal").append(html);
            }
        });
    }
</script>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">

</div>