@model IEnumerable<Applicant.Models.Attachment>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", "Attachments", new { id = item.AttachmentId }) |
            @Html.ActionLink("Details", "Details", "Attachments", new { id = item.AttachmentId }) |
            @Html.ActionLink("Delete", "Delete", "Attachments", new { id = item.AttachmentId })
        </td>
    </tr>
}

</table>
