@model IEnumerable<Applicant.Models.Attachment>

    <table class="table">
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.AttachmentId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.AttachmentId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.AttachmentId })
                </td>
            </tr>
        }
    </table>


@section Scripts {
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")
}