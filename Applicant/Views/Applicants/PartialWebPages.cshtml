@model Applicant.Models.Applicant

@if (Model.WebSite != null || Model.GitHub != null || Model.Linkedin != null || Model.Facebook != null || Model.VKontakte != null)
{
    <div class="panel panel-info">
        <div class="panel-heading">
            <div class="media">
                <div class="media-body">
                    <h4 class="media-heading">Web-страницы</h4>
                </div>
                <div class="media-right">
                    <a class="btn btn-primary btn-sm media-object" href="@Url.Action("Edit", new { id = Model.ApplicantId })">
                        <i class="glyphicon glyphicon-edit"></i>
                    </a>
                </div>
            </div>
        </div>

        <table class="table table-striped table-condensed cf">
            @if (Model.WebSite != null)
            {
                <tr>
                    <th>@Html.DisplayNameFor(model => model.WebSite)</th>
                </tr>
                <tr>
                    <td>@Html.DisplayFor(model => model.WebSite)</td>
                </tr>
            }
            @if (Model.GitHub != null)
            {
                <tr>
                    <th>@Html.DisplayNameFor(model => model.GitHub)</th>
                </tr>
                <tr>
                    <td>@Html.DisplayFor(model => model.GitHub)</td>
                </tr>
            }
            @if (Model.Linkedin != null)
            {
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Linkedin)</th>
                </tr>
                <tr>
                    <td>@Html.DisplayFor(model => model.Linkedin)</td>
                </tr>
            }
            @if (Model.Facebook != null)
            {
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Facebook)</th>
                </tr>
                <tr>
                    <td>@Html.DisplayFor(model => model.Facebook)</td>
                </tr>
            }
            @if (Model.VKontakte != null)
            {
                <tr>
                    <th>@Html.DisplayNameFor(model => model.VKontakte)</th>
                </tr>
                <tr>
                    <td>@Html.DisplayFor(model => model.VKontakte)</td>
                </tr>
            }
        </table>
    </div>
}
