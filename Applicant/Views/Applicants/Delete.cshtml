@model ApplicantWeb.Models.Applicant

@{
    ViewBag.Title = "Delete";
}
<h3>@ApplicantWeb.App_LocalResources.Applicant.WantDeleteApplicant</h3>
<div class="row">
    <div class="col-md-4">
        <div class="box box-primary">
            <div class="box-body">
                @Html.Action("Photo", new { idApplicant = Model.ApplicantId })
                <h3 class="profile-username text-center">
                    @Html.DisplayFor(model => model.FirstName)
                    @Html.DisplayFor(model => model.MiddleName)
                </h3>
                <p class="text-muted text-center">@Html.DisplayFor(model => model.BaseProfileJob)</p>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="box box-primary">
            <div class="box-header">@ApplicantWeb.App_LocalResources.Applicant.InformationAboutTheApplicant</div>
            <div class="box-body">
                @Html.Partial("~/Views/Applicants/PartialProfile.cshtml", Model)
            </div>
        </div>
    </div>
    <div class="col-md-12">
            @using (Html.BeginForm())
            {
                <div class="pull-right">
                    @Html.AntiForgeryToken()
                    <a class="btn btn-default btn-sm" href="@Url.Action("Details", new { id = Model.ApplicantId })">
                        <i class="glyphicon glyphicon-share-alt"></i>
                        @ApplicantWeb.App_LocalResources.Applicant.BackToApplicant
                    </a>
                    <button class="btn btn-danger btn-sm" type="submit" value="Delete">
                        <i class="glyphicon glyphicon-remove"></i> 
                        @ApplicantWeb.App_LocalResources.Applicant.Delete
                    </button>
                </div>
            }
    </div>
</div>
