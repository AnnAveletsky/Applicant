@model IEnumerable<Applicant.Models.Applicant>

@{
    ViewBag.Title = "Index";
}

<h2>Соискатели</h2>

<a class="btn btn-primary btn-md" href="@Url.Action("Create")">
    <i class="glyphicon glyphicon-plus"></i>
    Добавить
</a>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MiddleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Birthday)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Residence)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Skype)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GitHub)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Linkedin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HistoryComments)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salary)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MiddleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birthday)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Residence)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Skype)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GitHub)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Linkedin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HistoryComments)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                <div class="btn-group">
                    <a class="btn btn-default btn-xs btn-block" href="@Url.Action("Edit", new { id = item.AplicantID })">
                        <i class="glyphicon glyphicon-edit"></i>
                    </a>
                    <a class="btn btn-default btn-xs btn-block" href="@Url.Action("Details", new { id = item.AplicantID })">
                        <i class="glyphicon glyphicon-share-alt"></i>
                    </a>
                    <a class="btn btn-default btn-xs btn-block" href="@Url.Action("Delete", new { id = item.AplicantID })">
                        <i class="glyphicon glyphicon-remove"></i>
                    </a>
                </div>
            </td>
        </tr>
    }

</table>