@{
    ViewBag.Title = "Home Page";
    string search = "";
}
@using (Html.BeginForm("Index", "Applicants",
            new ApplicantClassLibrary.SortSearch(search,ApplicantClassLibrary.PoleSort.Фамилия,ApplicantClassLibrary.OrderSort.Прямой,5)))
{ 
    @Html.AntiForgeryToken()
<div class="jumbotron">
    <h1>Aplicant</h1>

    <div id="custom-search-input">
        <div class="form-group">
            <div class="input-group help-block row">
                @Html.EditorFor(model => search, new { htmlAttributes = new { @class = "form-control input-lg", @placeholder = "Search", @type = "text" } })
                <span class="input-group-btn">
                    <button type="submit" class="btn btn-info btn-lg" type="button">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                </span>
            </div>
        </div>
    </div>
    <input type="submit" class="btn btn-info btn-lg" value="Соискатели" />
</div>
}
